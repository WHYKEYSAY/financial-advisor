# Application
APP_ENV=production
LOG_LEVEL=INFO
TZ=UTC

# Security (REQUIRED - Generate strong random strings)
SECRET_KEY=your-secret-key-here-use-openssl-rand-hex-32
ENCRYPTION_KEY=your-encryption-key-here-use-openssl-rand-hex-32

# JWT Configuration
JWT_ALG=HS256
JWT_ACCESS_TTL_MIN=10080
JWT_REFRESH_TTL_DAYS=14

# Database (Railway will provide this automatically if you add PostgreSQL)
DATABASE_URL=postgresql://user:password@host:5432/dbname

# Redis (Railway will provide this automatically if you add Redis)
REDIS_URL=redis://host:6379

# URLs
BACKEND_URL=https://your-backend-url.railway.app
FRONTEND_URL=https://financial-advisor-rust.vercel.app
BACKEND_CORS_ORIGINS=https://financial-advisor-rust.vercel.app,http://localhost:3000

# OpenAI (REQUIRED)
OPENAI_API_KEY=sk-your-openai-api-key
OPENAI_MODEL=gpt-4o-mini

# Stripe (Optional - for payments)
STRIPE_PUBLIC_KEY=
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=
STRIPE_PRICE_ANALYST=price_free
STRIPE_PRICE_OPTIMIZER_MONTHLY=
STRIPE_PRICE_OPTIMIZER_YEARLY=
STRIPE_PRICE_AUTOPILOT_MONTHLY=
STRIPE_PRICE_AUTOPILOT_YEARLY=

# Plaid (Optional - for bank connections)
PLAID_CLIENT_ID=
PLAID_SECRET=
PLAID_ENV=sandbox

# File Storage
FILE_STORAGE_DIR=/data/uploads
MAX_FILE_SIZE_MB=25

# Rate Limiting
RATE_LIMIT_FREE=60/minute
RATE_LIMIT_OPTIMIZER=240/minute
RATE_LIMIT_AUTOPILOT=600/minute

# AI Quotas
AI_QUOTA_FREE=100
AI_QUOTA_OPTIMIZER=1000
AI_QUOTA_AUTOPILOT=3000

# Monitoring (Optional)
SENTRY_DSN=
